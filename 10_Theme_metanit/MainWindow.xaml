<Window x:Class="_10_Theme_metanit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_10_Theme_metanit"
        mc:Ignorable="d"
       Title="MainWindow" SizeToContent="WidthAndHeight" MinHeight="100"
        Style="{DynamicResource WindowStyle}">


    <Grid>
        <StackPanel>
            <ComboBox x:Name="styleBox" />
            <Button Content="Hello WPF" Style="{DynamicResource ButtonStyle}" />
            <TextBlock Text="Windows Presentation Foundation" Style="{DynamicResource TextBlockStyle}" />
        </StackPanel>
    </Grid>
</Window>
